<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.Views.Activities.ConditionActivity"
    android:id="@+id/fragment_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/archiveRoom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:fontFamily="casual"
            android:text="@string/archive_room"
            android:textAlignment="center"
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/co2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/nav_co2"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/co2Value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="11"
            android:textAlignment="center"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="80dp"
            app:srcCompat="@mipmap/ic_launcher_foreground"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/temperature"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="25dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/nav_temperature"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/temperatureValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="10"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="80dp"
            app:srcCompat="@mipmap/ic_launchertemperature_foreground"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/humidity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="25dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/nav_humidity"

            android:textSize="24sp" />

        <TextView
            android:id="@+id/humidityValue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="20"
            android:textAlignment="center"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="3"
            app:srcCompat="@mipmap/ic_launcherhumidity_foreground"
            android:layout_gravity="center"/>
    </LinearLayout>



</LinearLayout>
