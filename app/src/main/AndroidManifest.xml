<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sep4android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Views.GuidanceActivity"
            android:parentActivityName=".Views.ConditionActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"/>
        <activity android:name=".Views.ConditionActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"/>
        <activity android:name=".Fragments.CO2Fragment"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"/>
        <activity android:name=".Views.MainActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Views.SettingsActivity"
            android:parentActivityName=".Views.ConditionActivity"></activity>

        <service android:name=".Models.UpdateService" />
        <service
            android:name=".Models.NotificationJobScheduler"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>

</manifest>